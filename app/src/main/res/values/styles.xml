<resources>
    <attr format="reference" name="cardStyle"/>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="cardStyle">@style/CardView.Light</item>
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="locimg">@mipmap/ic_location_on_black_18dp</item>
        <item name="timeimg">@mipmap/ic_schedule_black_18dp</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="cardStyle">@style/CardView.Dark</item>
        <item name="locimg">@mipmap/ic_location_on_white_18dp</item>
        <item name="timeimg">@mipmap/ic_schedule_white_18dp</item>
    </style>

    <style name="AppThemeNoAB" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="cardStyle">@style/CardView.Light</item>
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="AppThemeDarkNoAB" parent="Theme.AppCompat.NoActionBar">
        <item name="cardStyle">@style/CardView.Dark</item>
    </style>


    <style name="CardView.Dark">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>
    <attr name="locimg" format="reference"/>
    <attr name="timeimg" format="reference"/>
</resources>
