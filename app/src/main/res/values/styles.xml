<resources>
    <attr format="reference" name="cardStyle"/>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#009688</item>
        <item name="locimg">@mipmap/ic_location_on_black_24dp</item>
        <item name="timeimg">@mipmap/ic_schedule_black_24dp</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="locimg">@mipmap/ic_location_on_white_24dp</item>
        <item name="colorAccent">#80CBC4</item>
        <item name="timeimg">@mipmap/ic_schedule_white_24dp</item>
    </style>

    <style name="AppThemeNoAB" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#212121</item>
        <item name="colorAccent">#009688</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="AppThemeDarkNoAB" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">#80CBC4</item>

    </style>

    <style name="PopupMenu_Dark" parent="ThemeOverlay.AppCompat">
    </style>

    <attr name="locimg" format="reference"/>
    <attr name="timeimg" format="reference"/>

</resources>
